{
  "family": "backend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::836940249137:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::836940249137:role/ecsAppTaskRole",
  "containerDefinitions": [
    {
      "name": "backend-container",
      "image": "zaglushka",                    
      "essential": true,
      "portMappings": [
        { "containerPort": 8080, "hostPort": 8080, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "DB_HOST", "value": "<db-host>" },
        { "name": "DB_PORT", "value": "<db-port>" }
      ],
     "secrets": [
        { "name": "DB_USER",     "valueFrom": "db-credentials:username::" },
        { "name": "DB_PASSWORD", "valueFrom": "db-credentials:password::" },
        { "name": "DB_NAME",     "valueFrom": "db-credentials:dbname::" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/backend",
          "awslogs-region": "sa-east-1",
          "awslogs-stream-prefix": "go-backend-"
        }
      }
    }
  ]
}
